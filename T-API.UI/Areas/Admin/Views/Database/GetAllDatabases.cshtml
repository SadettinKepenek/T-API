@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using T_API.Core.DTO.Database
@model List<ListDatabaseDto>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["Message"].ToString()
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Server</th>
            <th scope="col">Provider</th>
            <th scope="col">StartDate</th>
            <th scope="col">DatabaseId</th>
            <th scope="col">IsActive</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var database in Model)
        {
            <tr>

                <td>@database.Server</td>
                <td>@database.Provider</td>
                <td>@database.StartDate</td>
                <td>@database.DatabaseId</td>
                <td>@database.IsActive</td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteDatabase" asp-controller="Database" asp-route-id="@database.DatabaseId">Delete</a>
                    <a class="btn btn-primary" asp-action="UpdateDatabase" asp-controller="Database" asp-route-id="@database.DatabaseId">Update</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<a class="btn btn-secondary" asp-action="CreateDatabase" asp-controller="Database">Create Database</a>


