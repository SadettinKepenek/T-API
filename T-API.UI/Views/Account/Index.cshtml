@model T_API.UI.Models.Account.SettingsViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <h3 class="text-success">@TempData["Message"]</h3>
            <form asp-controller="Account" asp-action="Index" asp-antiforgery="true" method="post">
                <div class="form-group">
                    <label asp-for="Firstname">Firstname</label>
                    <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lastname">Lastname</label>
                    <input type="text" class="form-control" asp-for="Lastname" placeholder="Lastname">
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input type="tel" class="form-control" asp-for="PhoneNumber" placeholder="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <input type="text" class="form-control" asp-for="Username" placeholder="Username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input asp-for="UserId" hidden="hidden" />
                <input asp-for="Role" hidden="hidden" />
                <input asp-for="Password" hidden="hidden" />
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-danger">Change Password</a>

            </form>
        </div>
    
    </div>

</div>  